  <main>
    <div class="hot">
      <h2>Заголовок второго уровня =)))</h2>
    </div>
    <div class="deskGrid">
      <div class="most container">
        <% baseArr.forEach((item, i) => { %>
          <div class="fullLot">
            <a href="<%= item.id %>">
              <div class="lot" data-category="<%= item.category %>" >
                <div class="lotImg">
                  <img src="../img/<%= item.image %>" alt="LotImage">
                </div>
                <div class="lotInfo">
                  <div class="lotInfoName"><h4><%= item.name %></h4></div>
                  <div class="lotInfoDescription"><p>Lorem ipsum dolor sit.</p></div>
                  <div class="lotInfoPrice"><p>Цена: <%= item.cost %> грн</p></div>
                </div>
              </div>
            </a>
            <div class=" d-flex justify-content-center"><button class="button_buy_now" type="button" name="button" data-id='id=<%= item.id %>'> В Корзину </button></div>
          </div>

            <% }); %>
        </div>
    </div>

  <div class="preFooterLine"></div>
  </main>
